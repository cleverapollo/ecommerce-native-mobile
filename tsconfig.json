{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "./src/_typings"
    ],
    "lib": [
      "es2018",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@env/*": ["src/environments/*"],
      "@friends/*": ["src/app/friends/*"],
      "@guards/*": ["src/app/_guards/*"],
      "@menu/*": ["src/app/menu/*"],
      "@registration/*": ["src/app/registration/*"],
      "@shared/*": ["src/app/shared/*"],
      "@wishLists/*": ["src/app/wish-lists/*"],
      "@wishSearch/*": ["src/app/wish-search/*"]
    }
  },
  "exclude": [
    "src/app/core/test/*",
    "src/app/core/services/*-mock.service.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
